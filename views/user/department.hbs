
<section class="banner_area">
	<div class="banner_inner d-flex align-items-center">
		<div class="container">
			<div class="banner_content text-left">
				<h4>Procedure Category</h4>
				<div class="page_link">
					<a href="/">Home</a>
					<a href="user/department"> Departments</a>
				</div>
			</div>
		</div>
	</div>
</section>

	<!--================ Procedure Category Area =================-->
	<section class="procedure_category section_gap">
		<div class="container">			
			<div class="row justify-content-center section-title-wrap">
				<div class="col-lg-12">					
					<h1>DEPARTMENTS</h1>
				</div>
			</div>
			{{# each dept}}
			<div class="row mt-3">
				{{# each this}}
				<div class="col-lg-3">
					<div class="categories_post">
						<img src="{{this.imgpath}}" class="dept" alt="Procedure">
						<div class="categories_details">
							<div class="categories_text">
								<div class="border_line"></div>
								<a href="/user/depsub">
									<h5>View Doctors</h5>
								</a>
								<div class="border_line"></div>								
							</div>
						</div>
					</div>
					<a href="/user/depsub/{{this.id}}"><h4 class="text-primary mt-4 text-center">{{this.title}}</h4></a> 
					
				</div>	
				{{/each}}			
			</div>
			{{/each}}
			
		</div>
		
	</section>
	<!--================ End Procedure Category Area =================-->

